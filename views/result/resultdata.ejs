<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>StudentResult</title>

    <style>
     *{
    padding: 0;
    margin: 0;
    box-sizing: border-box;
    font-family: Arial, Helvetica, sans-serif;
    }

.container{
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    margin: 0 auto;
}

table{
    margin: 10px;
}

table tr th{
    margin: 0 auto;
    padding: 10px;
    border: 2px solid black;
    text-align: center;
    background-color: lightgray;
    color: green;
}

table  td{
    border: 2px solid black;
    margin: 10px;
    text-align: center;
    padding: 5px;
    background-color: lightsteelblue;
}


a{
    color: black;
    text-decoration: none;
    margin:15px 5px;
    padding: 5px;
    font-size: 18px;
    background-color: gray;
    border: 1px solid black;
    height: 30px;
    width: 40px;
    text-align: center;
}

.btn{
    margin: 15px auto;
    text-align: center;
}

h2{
    text-align: center;
    margin: 15px;
}

.disabled{
    cursor:not-allowed;
    pointer-events: none;
    color: green;
}
    </style>
</head>
<body>
    <h2>Vikram Kanzariya</h2>

    <div class="container">
        <table>
            <tr>
                <th rowspan="2">ID</th>
                <th rowspan="2">Name</th>
                <th colspan="2">Terminal</th>
                <th colspan="2">Prelims</th>
                <th colspan="2">Final</th>
                <th rowspan="2">TotalMarks</th>
                <th rowspan="2">ViewData</th>
            </tr>


            <tr>
                <th>Theory</th>
                <th>Practical</th>

                <th>Theory</th>
                <th>Practical</th>

                <th>Theory</th>
                <th>Practical</th>
            </tr>


            <% students.forEach((student) => { %>
                <tr>
                    <td> <%= student.sid %> </td>
                    <td> <%= student.name %> </td>

                    <td><%= student.terminalTheory %></td>
                    <td><%= student.terminalPractical %></td>
                    
                    <td><%= student.prelimTheory %></td>
                    <td><%= student.prelimPractical %></td>
                    
                    <td><%= student.finalTheory %></td>
                    <td><%= student.finalPractical %></td>

                    <td><%= student.Total %></td>
                    <td> <a href="/result/<%= student.sid %>">View</a></td>
                </tr>
            <% }) %>
            
        </table>
    </div>



    <!-- Pagination Component -->
<div class="btn">

    <a class="<%= page <= 1 ? 'disabled' : '' %>" href="/result?page=1"> <<  </a> 
    
    <a class="<%= page <= 1 ? 'disabled' : '' %>"  href="/result?page=<%= page - 1 > 0 ? page - 1 : 1 %>" > < </a>  

    <a class="disabled" href="/result?page=page"><%= page %></a>

    <a class="<%= page >= lastPage ? 'disabled' : '' %>"
        href="/result?page=<%=  page + 1 < lastPage ? page + 1 : lastPage %>"> > </a>  

    <a class="<%= page >= lastPage ? 'disabled' : '' %>" href="/result?page=<%= lastPage %>"> >> </a>  
</div>


</body>
</html>