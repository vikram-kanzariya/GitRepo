<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Details</title>
    <style>
        *{
            padding: 0;
            margin: 0;
            box-sizing: border-box;
        }

        h3,h4{
            text-align: center;
            margin-top: 20px;
            font-family: Arial, Helvetica, sans-serif;
        }

        .container{
            display: flex;
            /* border: 1px solid black; */
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

        .buttons a{
            text-decoration: none;
            color: black;
            font-weight: bold;
            border: 1px solid black;
            border-radius: 8px;
            margin: 15px;
        }

        .buttons {
            margin-top: 30px;
            margin-left: 24%;
        }

         .buttons a{
           
            margin-top: 30px;
            padding: 10px;
            font-family: Arial, Helvetica, sans-serif;
        }

        table th{
            background-color: lightgray;
            text-align: center;
            padding: 5px;

        }
        table td{
            background-color: lightblue;
            text-align: center;
            padding: 10px;
        }

        p{
            margin-top: 20px;
            font-weight: bold;
            font-family: Arial, Helvetica, sans-serif;
            background-color: lightgreen;
            padding: 5px;
            border-radius: 6px;
        }

        #logout{
            margin-left: 5%;
            font-size: 14px;
            padding: 7px;
            /* margin-top: 10%;  */
            font-weight: bold;
            background-color: rgb(33, 33, 48)  ;
            color: white;
            /* border: 1px solid black; */
            border-radius: 10px;
        }

        #logout:hover{
            background-color: crimson;
        }

        .buttons a:hover{
            background-color: gray;
        }
    </style>
</head>
<body>
    <h3>Vikram Kanzariya</h3>
    <h4>24DEV085</h4>

    <input type="button" name="logout" id="logout" value="LOGOUT">

    <div class="container">

        <table border="1">
            <tr>
                <th>ID</th>
                <th>Fname</th>
                <th>Lname</th>
                <th>E-mail</th>
            </tr>


            <tr>
                <td><%= user.uid %></td>
                <td><%= user.fname %></td>
                <td><%= user.lname %></td>
                <td><%= user.email %></td>
            </tr>
     
        </table>

        <!-- <p>Your Login is Successfull</p> -->
    </div>
    <br>
    <hr>

    <h3>All Tasks</h3>
    <div class="buttons">
        <a href="http://localhost:4000/dynamic">Dynamic Table</a>
        <a href="http://localhost:4000/kukucube">KukuCube</a>
        <a href="http://localhost:4000/tictactoe">TicTacToe</a>
        <a href="http://localhost:4000/sort">Sorting</a>
    </div>

    <br>

    <div class="buttons">
        <a href="http://localhost:4000/grid">Dynamic Grid</a>
        <a href="http://localhost:4000/data">Pagination</a>
        <a href="http://localhost:4000/searchdata">Search</a>
        <a href="http://localhost:4000/delimitedsearch">Delimited Search</a>
    </div>
    <br>
    <div class="buttons">
        <a href="http://localhost:4000/attendance">Attendance</a>
        <a href="http://localhost:4000/result">Result</a>
        <a href="http://localhost:4000/send">JobApp Create</a>
        <a href="http://localhost:4000/alluser">JobApp Update</a>

    </div>
<br>
    <div class="buttons">
        <a href="http://localhost:4000/ajax/send">AJAX Create</a>
        <a href="http://localhost:4000/ajax/users">AJAX Update</a>
        <a href="http://localhost:4000/events">JS Events</a>
    </div>

    
    <script>
        let logout = document.getElementById('logout');

        logout.addEventListener('click' , async function(){
            localStorage.removeItem('token');
            // alert("cgashucgs")

            let data = await fetch("http://localhost:4000/logout" , {
                method:"GET",
                headers:{'Content-Type' : 'application/json'}
            });
            
            data = await data.json();

            if(data.success){
                window.location.href = "http://localhost:4000/login";
            }
        });
    </script>
</body>
</html>